<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".StudentMainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

                <!-- Student Info Section -->
                <TextView
                    android:id="@+id/studentInfoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="Student Information"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <!-- Student Information Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                                <TextView
                                    android:id="@+id/stuIDLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ID"
                                    android:textStyle="bold"
                                    android:textColor="#6200EE" />

                                <TextView
                                    android:id="@+id/stuID"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="123456"
                                    android:textColor="#616161" />

                                <TextView
                                    android:id="@+id/stuNameLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textStyle="bold"
                                    android:textColor="#6200EE"
                                    android:layout_marginTop="8dp" />

                                <TextView
                                    android:id="@+id/stuName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    android:textColor="#616161" />

                                <TextView
                                    android:id="@+id/stuMailLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mail"
                                    android:textStyle="bold"
                                    android:textColor="#6200EE"
                                    android:layout_marginTop="8dp" />

                                <TextView
                                    android:id="@+id/stuMail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="johndoe@example.com"
                                    android:textColor="#616161" />

                                <TextView
                                    android:id="@+id/stuCGPALabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="CGPA"
                                    android:textStyle="bold"
                                    android:textColor="#6200EE"
                                    android:layout_marginTop="8dp" />

                                <TextView
                                    android:id="@+id/stuCGPA"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="3.8"
                                    android:textColor="#616161" />

                        </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Course Table Section -->
                <TextView
                    android:id="@+id/courseTableTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="Course Table"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/courseTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:padding="8dp" />

                <!-- Navigation Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/officeHourButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#2B622D"
                    android:text="Office Hour"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/enrollBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#2B622D"
                    android:text="Enroll Course"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:cornerRadius="16dp" />

        </LinearLayout>
</ScrollView>
